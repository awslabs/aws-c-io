{
    "name": "aws-c-io",
    "upstream": [
        { "name": "aws-c-common" },
        {
            "name": "s2n",
            "targets": ["linux", "android"],
            "revision": "v1.0.16", "_comment": "main broken on 2021.08.11 remove pinned revision once fixed."
        },
        { "name": "aws-c-cal" }
    ],
    "downstream": [
        { "name": "aws-c-mqtt" },
        { "name": "aws-c-http" }
    ],
    "targets": {
        "linux": {
            "_comment": "Install SoftHSM2, and run ./builder/actions/pkcs11_test_setup.py",
            "packages": ["softhsm"],
            "test_steps": [
                "pkcs11-test-setup",
                "test"
            ]
        }
    },
    "build_env": {
        "LSAN_OPTIONS": "suppressions={source_dir}/tests/resources/suppressions.txt:allow_addr2line=1",
        "CMAKE_BUILD_PARALLEL_LEVEL": "2"
    }
}
